#include "softwareTimer.h"
#include "main.h"

int timerCounter0 = 0;
int flag0 = 0;
int cycle = 10;

void setCycle() {
	cycle = htim2.Init.Prescaler;
}

void setTimer0(int duration) {
	timerCounter0 = duration/cycle;
	flag0 = 0;
}

void timerRun() {
	if(timerCounter0 > 0) {
		timerCounter0--;
		if(timerCounter0 <= 0) {
			flag0 = 1;
		}
	}
}

